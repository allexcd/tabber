{
  "name": "tabber",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "AI Tab Grouper - Chrome Extension",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "stylelint \"**/*.css\" --fix",
    "check": "npm run lint && npm run format:check && npm run stylelint",
    "fix:all": "npm run lint:fix && npm run format && npm run stylelint:fix",
    "package": "node scripts/package.js",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major",
    "version": "node scripts/bump-version.js",
    "changeset": "node scripts/changeset.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "eslint": "^8.57.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.2",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "*.{html,md,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
